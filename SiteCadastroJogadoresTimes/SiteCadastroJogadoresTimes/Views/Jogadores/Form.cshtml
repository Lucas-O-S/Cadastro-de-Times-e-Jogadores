@model JogadoresViewModel

<div class="container mt-4">
    <form asp-action="Save" method="post" enctype="multipart/form-data">
        <input value="@ViewBag.operacao" name="operacao" hidden />
        <input value="@Model.id" asp-for="id" hidden />

        <div class="form-group">
            <label asp-for="nome" class="control-label"> Nome do Jogador </label>
            <input asp-for="nome" class="form-control" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="posicao" class="control-label">Posição do jogador</label>

    <select asp-for="posicao" class="form-control">
                @foreach (var op in ViewBag.posicoes)
                {
                <option value="@((int)op)">@op</option>
                }
    </select>
            <span asp-validation-for="posicao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="timeId" class="control-label">Posição do jogador</label>

            <select asp-for="timeId" class="form-control"> 
                @foreach (TimeFutebolViewModel op in ViewBag.times)
                {
                    <option value="@op.id">@op.nome</option>
                }
            </select>

            <span asp-validation-for="timeId" class="text-danger"></span>
        </div>
        


  

        <button type="submit" class="btn btn-success">Salvar</button>
        <a href="@Url.Action("Index", "TimeFutebol")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

